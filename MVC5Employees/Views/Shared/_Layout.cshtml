<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
    body{
    padding-top:0px;
    }
    .navbar a:link {
    color: white;
    text-decoration:none;
    }
    .navbar a:visited {
    color: silver;
    }
    .navbar a:hover {
    color:green;
    transition: 1s;
    font-size:1.2em;
    }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" href="#">MVC5 Employees</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Main Office", "mainOfficeEmployees", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Pay Calculator", "GrossPayCalculator", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Add New Employee", "AddEmp", "Home")
                    </li>
                </ul>
            </div>
        </nav>
    </header>
 
    <div class="container body-content">
        @RenderBody()
        <hr />
     
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
<footer>
    <p> @DateTime.Now.Year - &copy; Missing Detective Agency</p>
</footer>
</html>
